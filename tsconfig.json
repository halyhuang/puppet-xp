{
  "extends": "@chatie/tsconfig",
  "compilerOptions": {
    "outDir": "dist/esm",
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "tests/fixtures/",
    "src/init-agent-script.ts",
    "src/init-agent-script.js"
  ],
  "include": [
    "app/**/*.ts",
    "bin/*.ts",
    "bot/**/*.ts",
    "examples/**/*.ts",
    "scripts/**/*.ts",
    "src/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "tests/**/*.spec.ts",
  ],
}